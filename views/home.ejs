<!-- Join GUI -->
<input
  type="number"
  id="submitcode"
  placeholder="Code"
  oninput="this.value = this.value.replace(/[^0-9.]/g, ''); this.value = this.value.replace(/(\..*)\./g, '$1');"
  onKeyDown="if(this.value.length==4 && event.keyCode!=8) return false;"
  required
/>
